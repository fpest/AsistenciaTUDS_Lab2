block content

    html 

        head 
        body
                - materia = materia
                - fechahoy = hoy
                - cal = calendario

                if (mensaje)
                    - mensajeRegistro = mensaje 
                else 
                    - mensajeRegistro = ""

                

                div(class='dropdown')
                    button(class='dropbtn') Alumnos
        
                        div(class="dropdown-content")
